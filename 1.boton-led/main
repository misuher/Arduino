/*
Light up a LED when a button is pressed using Arduino IDE

Ports:
	LED = 13
	Button = 8
*/

//1.Port definitions:
int buttonPin = 8;
int ledPin = 13;

//2.Setup input/output beheave
void setup(){
	pinMode(buttonPin,INPUT);
	pinMode(ledPin,OUTPUT);
}

//3.Define the execution loop
void loop(){
	if(digitalRead(buttonPin) == HIGH){
		digitalWrite(ledPin, HIGH);
	}else{
		digitalWrite(ledPin, LOW);
	}
}